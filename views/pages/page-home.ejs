<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&display=swap"
        rel="stylesheet">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid mx-5 px-5">
            <a class="navbar-brand" href="/">Super Tickets</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/favorites">All Tickets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</head>

<body id="page-home">
    <div class="side-nav bg-dark d-none d-lg-block">
        <div class="sidebar bg-dark border-end">
            <div class="list-group list-group-flush bg-dark">
                <!-- <a href="/tickets" class="list-group-item list-group-item-action bg-dark text-white">Tickets</a> -->
                <!-- <a href="/tickets/new" class="list-group-item list-group-item-action bg-dark text-white">New Ticket</a> -->
                <button type="button" class="btn btn-primary bg-dark border-0 text-start ms-1" data-bs-toggle="modal"
                    data-bs-target="#addTicketModal">
                    New Ticket
                </button>
                <!-- <a href="/dashboard" class="list-group-item list-group-item-action bg-dark text-white">Dashboard</a> -->
                <!-- <a href="/settings" class="list-group-item list-group-item-action bg-dark text-white">Settings</a> -->
            </div>
        </div>
    </div>

    <section class="mt-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="tickets-wrap">
                        <table class="tickets">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>Created</th>
                                    <th>Due</th>
                                    <th>Requester</th>
                                    <th>Assignee</th>
                                    <th>Category</th>
                                    <th>View Ticket</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% const statusClass=(s)=> {
                                    if (!s) return "open";
                                    const x = s.toLowerCase();
                                    if (x === "in progress") return "progress";
                                    if (x === "closed") return "closed";
                                    if (x === "review") return "review";
                                    return "open";
                                    };

                                    const fmtDate = (d) => (d ? new Date(d).toISOString().slice(0, 10) : "");
                                    %>

                                    <% if (tickets && tickets.length) { %>
                                        <% tickets.forEach((t)=> { %>
                                            <tr>
                                                <td>
                                                    <%= t.ticketNumber %>
                                                </td>

                                                <td>
                                                    <span class="pill <%= statusClass(t.status) %>">
                                                        <%= t.status %>
                                                    </span>
                                                </td>

                                                <td>
                                                    <%= t.priority %>
                                                </td>
                                                <td>
                                                    <%= fmtDate(t.createdAt) %>
                                                </td>
                                                <td>
                                                    <%= fmtDate(t.dueDate) %>
                                                </td>
                                                <td>
                                                    <%= t.requester %>
                                                </td>
                                                <td>
                                                    <%= t.assignee || "Unclaimed" %>
                                                </td>
                                                <td>
                                                    <%= t.category %>
                                                </td>

                                                <td>
                                                    <!-- Placeholder for later -->
                                                    <a class="btn btn-sm btn-outline-secondary disabled" href="#"
                                                        tabindex="-1" aria-disabled="true">
                                                        View
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="9" class="text-center py-4">No tickets yet.</td>
                                                    </tr>
                                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <nav class="mt-3">
                    <ul class="pagination justify-content-end">
                        <li class="page-item <%= hasPrev ? "" : " disabled" %>">
                            <a class="page-link" href="/?page=<%= page - 1 %>">Previous</a>
                        </li>

                        <li class="page-item disabled">
                            <span class="page-link">Page <%= page %> of <%= totalPages %></span>
                        </li>

                        <li class="page-item <%= hasNext ? "" : " disabled" %>">
                            <a class="page-link" href="/?page=<%= page + 1 %>">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

    </section>

    <div id="addTicketModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Ticket</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex align-items-top justify-content-center">
                        <form method="POST" action="/tickets/create">
                            <div class="mb-1">
                                <label for="ticketNumber" class="form-label">Ticket Number</label>
                                <input type="text" inputmode="numeric" pattern="\d{4}" maxlength="4"
                                    class="form-control form-control-lg" id="ticketNumber" name="ticketNumber"
                                    placeholder="0001" required />
                            </div>

                            <div class="mb-1">
                                <label for="requester" class="form-label">Requester</label>
                                <input type="text" class="form-control form-control-lg" id="requester" name="requester"
                                    placeholder="First Last" required />
                            </div>

                            <div class="mb-1">
                                <label for="dueDate" class="form-label">Due Date</label>
                                <input type="date" class="form-control form-control-lg" id="dueDate" name="dueDate"
                                    placeholder="basic, manager, admin" required />
                            </div>

                            <div class="mb-1">
                                <label for="category" class="form-label">Category</label>
                                <select type="" class="form-control form-control-lg" id="category" name="category"
                                    required>
                                    <option value="Billing">Billing</option>
                                    <option value="Technical">Technical</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Bug">Bug</option>
                                    <option value="Security">Security</option>
                                </select>
                            </div>

                            <div class="mb-1">
                                <label for="subjectLine" class="form-label">Subject Line</label>
                                <input type="text" class="form-control form-control-lg" id="subjectLine"
                                    name="subjectLine" placeholder="Ticket for Bug on www.example.com" required />
                            </div>

                            <div class="mb-1">
                                <label for="description" class="form-label">Description</label>
                                <textarea type="text" class="form-control form-control-lg" id="description"
                                    name="description" placeholder="This ticket requires you to ..."
                                    required></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="priority" class="form-label">Priority</label>
                                <select type="" class="form-control form-control-lg" id="priority" name="priority"
                                    required>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                    <option value="Critical">Critical</option>
                                </select>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Add Ticket
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>

</body>

</html>